{% extends 'base.html.twig' %}

{% block title %}Alle Einträge{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2>📋 Alle gespeicherten Alters-Einträge</h2>

    {% if eintraege is not empty %}
        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Alter</th>
                    <th>Geburtsjahr</th>
                    <th>Ergebnis</th>
                </tr>
            </thead>
            <tbody>
                {% for eintrag in eintraege %}
                    <tr>
                        <td>{{ eintrag.name }}</td>
                        <td>{{ eintrag.alter }}</td>
                        <td>{{ eintrag.geburtsjahr }}</td>
                        <td>{{ eintrag.ergebnis }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p class="alert alert-warning mt-4">⚠️ Noch keine Einträge vorhanden.</p>
    {% endif %}
</div>
{% endblock %}
